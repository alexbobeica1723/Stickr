<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stickr.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Stickr.Views"
    FlyoutBehavior="Disabled"
    TabBarTitleColor="{StaticResource PrimaryColor}"
    BackgroundColor="{StaticResource BackgroundColor}">

    <TabBar>
        <ShellContent
            Title="Collections"
            ContentTemplate="{DataTemplate views:CollectionsView}" />

        <ShellContent
            Title="My Albums"
            ContentTemplate="{DataTemplate views:MyAlbumsView}" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfileView}" />
    </TabBar>

</Shell>
