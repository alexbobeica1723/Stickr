<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stickr.Views.Elements.CollectionPresentationCardView">
    <Frame Padding="12"
           CornerRadius="12"
           HasShadow="True"
           Margin="8">

        <VerticalStackLayout Spacing="8">
            <Image Source="{Binding Image}"
                   HeightRequest="120"
                   Aspect="AspectFill" />

            <Label Text="{Binding Title}"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label Text="{Binding Description}"
                   FontSize="14"
                   TextColor="Gray" />

            <Label Text="{Binding TotalStickers, StringFormat='Total stickers: {0}'}"
                   FontSize="12"
                   TextColor="Gray" />
        </VerticalStackLayout>

    </Frame>
</ContentView>