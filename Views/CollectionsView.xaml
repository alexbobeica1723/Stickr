<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="Stickr.Views.CollectionsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:icons="clr-namespace:Stickr.Constants"
    xmlns:viewModels="clr-namespace:Stickr.ViewModels"
    xmlns:elementsViewModels="clr-namespace:Stickr.ViewModels.Elements"
    x:DataType="viewModels:CollectionsViewModel"
    BackgroundColor="{StaticResource BackgroundColor}"
    Shell.NavBarIsVisible="False"
    Padding="24, 16">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *, Auto, Auto">

        <!-- Loading indicator -->
        <ActivityIndicator
            Grid.Row="0"
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            HorizontalOptions="Center"
            Margin="12" />
        
        <!-- Available Collections -->
        <Label Grid.Row="0"
               Style="{StaticResource TitleStyle}"
               Text="Available Collections"
               Margin="0, 8"/>
        
        <Label Grid.Row="0"
               Style="{StaticResource ClickableIconStyle}"
               Text="{x:Static icons:Icons.Add}"
               HorizontalOptions="End"
               VerticalOptions="Center"
               Margin="0, 8">
            <Label.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding CreateCollectionCommand}" />
            </Label.GestureRecognizers>
        </Label>
        
        <CollectionView
            Margin="0, 8"
            Grid.Row="4"
            ItemsSource="{Binding Collections}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="elementsViewModels:CollectionItemViewModel">

                    <Border
                        Margin="0, 8"
                        BackgroundColor="{StaticResource SecondaryColor}"
                        HeightRequest="280">
                        
                        <Grid RowDefinitions="2*, *">
                            
                            <Image Grid.Row="0"
                                   Aspect="AspectFill"
                                   Source="{Binding Model.Image}"/>
                            
                            <Grid Grid.Row="1"
                                  RowDefinitions="Auto, Auto">
                                
                                <Label
                                    Grid.Row="0"
                                    Style="{StaticResource TextStyle}"
                                    Text="{Binding Model.Title}" />

                                <Label
                                    Grid.Row="1"
                                    Style="{StaticResource DescriptionStyle}"
                                    Text="{Binding Model.Description}"/>
                                
                                <Button Grid.Row="2"
                                        HeightRequest="20"
                                        CornerRadius="5"
                                        BackgroundColor="{StaticResource PrimaryColor}"
                                        HorizontalOptions="End"
                                        Text="Start collecting"
                                        FontSize="13"
                                        TextColor="{StaticResource BackgroundColor}"
                                        Command="{Binding StartCollectingCommand}"/>
                                
                            </Grid>
                            
                        </Grid>
                        
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        
        <Button Grid.Row="5"
                Style="{StaticResource SecondaryButton}"
                Margin="0, 8"
                Text="Secondary button"
                Command="{Binding CreateCollectionCommand}"/>
        
        <Button Grid.Row="6"
                Style="{StaticResource PrimaryButton}"
                Margin="0, 8"
                Text="Primary button"
                Command="{Binding CreateCollectionCommand}"/>
    </Grid>
</ContentPage>